<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>com.uts.taller1.vehicleapp.controller.VehiculoServlet</servlet-class>
    </servlet>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <resource-ref>
        <description>Recurso JDBC para la base de datos del garaje</description>
        <res-ref-name>jdbc/garageDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>vehicles.jsp</welcome-file>
    </welcome-file-list>
</web-app>
